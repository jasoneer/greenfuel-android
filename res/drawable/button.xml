<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
		<shape android:shape="rectangle">
			<gradient
				android:angle="270"
				android:startColor="#888"
				android:centerColor="#aaa"
				android:endColor="#888"
			/>
			<padding
				android:top="15dip"
				android:bottom="15dip"
				android:left="15dip"
				android:right="15dip"
			/>
			<corners
				android:radius="5dip"
			/>
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			<gradient
				android:angle="270"
				android:startColor="#eee"
				android:endColor="#aaa"
			/>
			<padding
				android:top="15dip"
				android:bottom="15dip"
				android:left="15dip"
				android:right="15dip"
			/>
			<corners
				android:radius="5dip"
			/>
		</shape>
	</item>
</selector>
